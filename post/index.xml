&lt;/h3&gt;&lt;table&gt;
  &lt;thead&gt;
      &lt;tr&gt;
          &lt;th&gt;发明&lt;/th&gt;
          &lt;th&gt;影响&lt;/th&gt;
          &lt;th&gt;现代对应&lt;/th&gt;
      &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
      &lt;tr&gt;
          &lt;td&gt;造纸术&lt;/td&gt;
          &lt;td&gt;知识传播革命&lt;/td&gt;
          &lt;td&gt;课本/书籍&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;火药&lt;/td&gt;
          &lt;td&gt;改变战争形态&lt;/td&gt;
